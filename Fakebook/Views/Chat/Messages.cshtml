@model List<Entities.MessageInfo>

@{
    ViewBag.Title = "Messages";
}

@if (Model == null || Model.Count() == 0)
{
    <div style="padding:20px; text-align:center">
        <h2>@Html.ActionLink("Message A Friend!", "AllFriends", "Friend", null, new { @class = "SecondaryButton" })</h2>
    </div>
}
else
{
    <div class="container centerOnMobile">
        @foreach (var messageInfo in Model)
        {
            @Html.Partial("_MessageList", messageInfo);
        }

    </div>
}
